@model IEnumerable<WebPerfume.Models.TSanPham>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhSachSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh mục các sản phẩm</h1>

<p>

    <a asp-controller="admin" asp-action="ThemSanPham">Thêm Sản Phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Sản Phẩm
            </th>
            <th>
                Giá sản phẩm
            </th>
            <th>
                Giới thiệu
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }

@foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }
        <tr class="@cls">
        
            <td>
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaLonNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiThieuSp)
            </td>
            
            
            <td>
                    <a asp-controller="admin" asp-action="SuaSanPham" asp-route-maSanPham="@item.MaSp">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSp">Details</a> |
                    <a asp-controller="admin" asp-action="XoaSanPham" asp-route-maSanPham="@item.MaSp">Delete</a>
            </td>
        </tr>
}
    </tbody> 
</table>
