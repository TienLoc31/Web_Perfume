@model X.PagedList.IPagedList<TSanPham>
@addTagHelper *, Micosoft.AspNetCore.Mvc.TagHelper
@{
    ViewData["Title"] = "TimKiemSanPham";
    Layout = "~/Views/Shared/_PartialTimKiemSP.cshtml";
}
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="card product-item border-0 mb-4">
            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                <img class="img-fluid w-100" src=@Url.Content("../ProductImages/"+ item.AnhSp) alt="" style=" height:256px;">
            </div>
            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                <h6 class="text-truncate mb-3"><a asp-controller="Home" asp-action="ProductDetail" asp-route-maSp="@item.MaSp">@item.TenSp</a></h6>
                <div class="d-flex justify-content-center">
                    <h6>@item.GiaLonNhat</h6>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light border">
                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                @*<a  class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>*@
                <form method="post" action="@Url.Action("AddiItem", "Cart")">
                    <input type="hidden" name="id" value="@item.MaSp" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-sm text-dark p-0">Add to cart</button>

                </form>
            </div>
        </div>
    </div>
    
}
